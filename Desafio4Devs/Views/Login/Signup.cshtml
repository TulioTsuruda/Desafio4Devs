@using Desafio4Devs.Models
@model Login

@{
    ViewData["Title"] = "Sign Up";
}

<script src="~/js/jquery-3.4.1.min.js"></script>
<script src="~/js/Bridge/Signup.js"></script>

<form class="form-survey" id="formRegister">
    <div class="form-row">
        <div class="col-md-4">
            <label for="userId">Usuário</label>
            @Html.TextBoxFor(x => x.userId, new
       {
           @class = "form-control",
           @placeholder = "Fulano123",
           @maxlength = "15"

       })
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label for="nome">Nome</label>
            @Html.TextBoxFor(x => x.firstName, new
       {
           @class = "form-control",
           @placeholder = "Nome"

       })
        </div>
        <div class="col">
            <label for="sobremesa">Sobrenome</label>
            @Html.TextBoxFor(x => x.lastName, new
       {
           @class = "form-control",
           @placeholder = "Sobrenome"

       })
        </div>
    </div>
    <div class="form-row">
        <div class="from-group col-md-6">
            <label for="cpf">CPF</label>
            @Html.TextBoxFor(x => x.CPF, new
       {
           @class = "form-control",
           @placeholder = "Somente números",
           @maxlength = "11",
           pattern = "[0-9]{11}"
       })
            <small id="emailHelp" class="form-text text-muted">*Obrigatório</small>
        </div>
        <div class="from-group col-md-3">
            <label for="birthDate">Data de Nascimento</label>
            @Html.TextBoxFor(x => x.birthDate, new
       {
           @class = "form-control",
           @type = "date"

       })
        </div>
        <div class="from-group col-md-3">
            <label for="gender">Gênero</label>
            @Html.DropDownListFor(x => x.gender,
                    new SelectList(Enum.GetValues(typeof(Gender))),
                    "Select Gender",
                    new { @class = "custom-select mr-sm-2" }
                    )
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label for="email">E-mail</label>
            @Html.TextBoxFor(x => x.email, new
       {
           @class = "form-control",
           @placeholder = "email@email.com"

       })
            <small id="emailHelp" class="form-text text-muted">*Obrigatório</small>
        </div>
        <div class="col">
            <label for="confEmail">Confirme seu e-mail</label>
            @Html.TextBoxFor(x => x.confEmail, new
       {
           @class = "form-control",
           @placeholder = "email@email.com"

       })
            <small id="emailHelp" class="form-text text-muted">*Obrigatório</small>
        </div>
    </div>

    <div class="form-row">
        <div class="from-group col-md-6">
            <label for="cellPhone">Celular:</label>
            @Html.TextBoxFor(x => x.cellPhone, new
       {
           @class = "form-control",
           @placeholder = "00 91234-1234",
           @pattern = "[0-9]{2} [0-9]{5}-[0-9]{4}"

       })
        </div>
        <div class="from-group col-md-6">
            <label for="Phone">Telefone:</label>
            @Html.TextBoxFor(x => x.Phone, new
       {
           @class = "form-control",
           @placeholder = "00 3123-1234",
           @pattern = "[0-9]{2} [0-9]{4}-[0-9]{4}"

       })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="address">Endereço</label>
            @Html.TextBoxFor(x => x.address, new
       {
           @class = "form-control",
           @placeholder = "Rua Street"

       })
        </div>
        <div class="form-group col-sm-2">
            <label for="number">Número</label>
            @Html.TextBoxFor(x => x.number, new
       {
           @class = "form-control",
           @placeholder = "12345",
           @pattern = "[0-9]",
           @maxlength = "5"
       })
        </div>
        <div class="form-group col-md-4">
            <label for="neighborhood">Bairro</label>
            @Html.TextBoxFor(x => x.neighborhood, new
       {
           @class = "form-control",
           @placeholder = "Uma Vila Qualquer"

       })
        </div>
    </div>
    <div class="form-group">
        <label for="address2">Complemento</label>
        @Html.TextBoxFor(x => x.address2, new
   {
       @class = "form-control",
       @placeholder = "Apartamento, Bloco, Torre..."

   })
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="city">Cidade</label>
            @Html.TextBoxFor(x => x.city, new
       {
           @class = "form-control"

       })
        </div>
        <div class="form-group col-md-4">
            <label for="state">Estado</label>
            @Html.TextBoxFor(x => x.state, new
       {
           @class = "form-control"

       })
        </div>
        <div class="form-group col-md-2">
            <label for="zipCode">CEP</label>
            @Html.TextBoxFor(x => x.zipCode, new
       {
           @class = "form-control",
           @placeholder = "80000-000",
           @pattern = "[0-9]{5}-[0-9]{3}",
           @maxlength = "9"
       })
        </div>
    </div>

    <div class="form-row">
        <div class="col">
            <label for="password">Senha</label>
            @Html.PasswordFor(x => x.password, new
       {
           @class = "form-control"

       })
            <small id="emailHelp" class="form-text text-muted">*Obrigatório</small>
        </div>
        <div class="col">
            <label for="confPass">Confirme sua Senha</label>
            @Html.PasswordFor(x => x.confPass, new
       {
           @class = "form-control"

       })
            <small id="emailHelp" class="form-text text-muted">*Obrigatório</small>
        </div>
    </div>

    <button class="btn btn-primary btn-lg" id="register">Registrar</button>

</form>