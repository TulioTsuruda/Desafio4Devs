@using Desafio4Devs.Models
@model Survey

@{
    ViewData["Title"] = "Cliente";
}

<script src="~/js/jquery-3.4.1.min.js"></script>
<script src="~/js/Bridge/Cliente.js"></script>

<div class="text-center ">
    <h1>Escolha o Cliente</h1>
</div>

<form class="form-survey" id="formSurvey">
    <div class="text-left">
        <span>Caso não encontre o cliente, cadastre um novo: </span>
        <a class="btn btn-secondary btn-lg" asp-controller="Survey" asp-action="CreateCliente">Novo Cliente</a>
    </div>

    <div class="form-group">
        <label for="nomeCliente">Nome do cliente</label>
        <!-- 
            Necessário crirar um Dropdown para Selecionar o cliente 
        -->
        @Html.TextBoxFor(x => x.nomeCliente, new
           {
               @class = "form-control",
               @placeholder = "Razão social ou Nome fantasia",
               @type = "email"
           })
        <small id="emailHelp" class="form-text text-muted">*Obrigatório</small>
    </div>

    <div class="form-row form-group">
        <div class="col">
            <label for="cnpj">CNPJ</label>
            @Html.TextBoxFor(x => x.cnpj, new
       {
           @class = "form-control",
           @placeholder = "12345678/1234-12",
           @pattern = "[0-9]{8}/[0-9]{4}-[0-9]{2}"
       })
        </div>
        <div class="col">
            <label for="dataCliente">Data em que se tornou cliente</label>
            @Html.TextBoxFor(x => x.data, new
       {
           @class = "form-control",
           @Type = "date"

       })
        </div>
    </div>

    <div class="form-group">
        <label for="nomeContato">Nome da pessoa de contato</label>
        @Html.TextBoxFor(x => x.nomeContato, new
           {
               @class = "form-control",
               @placeholder = "Responsável"
           })
        <small id="emailHelp" class="form-text text-muted">*Obrigatório</small>
    </div>

    <button class="btn btn-primary btn-lg" id="next">Prosseguir</button>

</form>
